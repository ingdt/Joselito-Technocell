@model IEnumerable<Joselito_Technocell.Models.PagoCxC>

@{
    ViewBag.Title = "Pagos CxC";
    Layout = null;
}


<div class="table-responsive">
    <table class="table table-flush" id="datatable-basic">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    @item.Fecha.ToShortDateString() @item.Fecha.ToShortTimeString()
                </td>
                <td>
                    <a target="_blank" href="~/caja/recibodepago/@item.IdPagoCxC">imprimir pago</a>
                </td>
            </tr>
        }

    </table>
</div>

