
@model Joselito_Technocell.Models.Caja

@{
    ViewBag.Title = "Caja";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Caja</h6>
                </div>
                <div class="col-lg-6 col-5 text-right">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row justify-content-center  align-items-center pt-200">
        <div class="col-md-4">
            <div class="card bg-gradient-primary">
                <!-- Card body -->
                <div class="card-body">
                    <div class="row justify-content-center  align-items-center">
                        <h3 class="text-white">Apertura de caja</h3>
                    </div>
                    <div class="mt-4">
                        <form role="form" class="form-primary" method="post" action="~/Caja/Abrircaja">
                            <input name="OperadorId" id="OperadorId" value="@Model.OperadorId" class="form-control" type="text"  style="display: none" />
                            <div class="form-group">
                                <div class="input-group input-group-alternative mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ni ni-money-coins"></i></span>
                                    </div>
                                    <input name="MontoApertura" id="MontoApertura" class="form-control" placeholder="Monto de apertura" type="number" step="0.01">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-block btn-info">Abrir caja</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>