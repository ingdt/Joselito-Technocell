@model  Joselito_Technocell.Models.Factura
@{
    ViewBag.Title = "Factura";
    Layout = null;

    var vuelto = Model.Efectivo - Model.Total;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
<!-- Icons -->
<link rel="stylesheet" href="~/Content/assets/vendor/nucleo/css/nucleo.css" type="text/css">
@*<link rel="stylesheet" href="~/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css" type="text/css">*@
<!-- Page plugins -->
<link rel="stylesheet" href="~/Content/assets/vendor/fullcalendar/dist/fullcalendar.min.css">
<link rel="stylesheet" href="~/Content/assets/vendor/sweetalert2/dist/sweetalert2.min.css">
<!-- Argon CSS -->
<link rel="stylesheet" href="~/Content/assets/css/argon.css?v=1.2.1" type="text/css">

<center><h1>Factura #@Model.FacturaId</h1></center>
<br />
<br />
<br />
<table class="table table-bordered">
    <tr>
        <td width="50%"><b>Fecha: </b></td>
        <td width="50%">
            @Model.Fecha.ToLongDateString() | @Model.Fecha.ToShortTimeString()
        </td>
    </tr>
    <tr>
        <td width="50%"><b>Cliente: </b></td>
        <td width="50%">
            @(Model.Cliente?.FullName)
        </td>
    </tr>
</table>

<br />
<br />
<br />

<table class="table ">
    <thead>
        <tr>
            <th>producto</th>
            <th>cantidad</th>
            <th>subtotal</th>
        </tr>
    </thead>
    @foreach (var item in Model.DetalleFacturas)
    {
        <tbody>
            <tr>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Cantidad
                </td>
                <td width="25%">
                    @item.Total.ToString("C")
                </td>
            </tr>
        </tbody>
    }

</table>

<table width="100%">
    <tr>
        <td style="text-align: right">
            <b>Total: @Model.Total.ToString("C")</b>
        </td>
    </tr>
    <tr>
        <td style="text-align: right">
            <b>Efectivo: @Model.Efectivo.ToString("C")</b>
        </td>
    </tr>
    <tr>
        <td style="text-align: right">
            @if (Model.IdMetodoPago == 1)
            {
                <b>Vuelto: @vuelto.ToString("C")</b>
            }
            else
            {
                <b>Deuda: @vuelto.ToString("C")</b>
            }
        </td>
    </tr>
</table>

<br />
<br />
<br />

<center><small>Gracias prosu compra</small></center>


