@model IEnumerable<Joselito_Technocell.Models.Inventario>

@{
    ViewBag.Title = "print";
    Layout = null;

    decimal total = 0m;
    decimal totalCantidad = 0m;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
<!-- Icons -->
<link rel="stylesheet" href="~/Content/assets/vendor/nucleo/css/nucleo.css" type="text/css">
@*<link rel="stylesheet" href="~/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css" type="text/css">*@
<!-- Page plugins -->
<link rel="stylesheet" href="~/Content/assets/vendor/fullcalendar/dist/fullcalendar.min.css">
<link rel="stylesheet" href="~/Content/assets/vendor/sweetalert2/dist/sweetalert2.min.css">
<!-- Argon CSS -->
<link rel="stylesheet" href="~/Content/assets/css/argon.css?v=1.2.1" type="text/css">

<center><h1>Reporte de inventario</h1></center>
<br />
<br />
<br />
<table class="table">
    <tr>
        <th>
            Producto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            Total
        </th>
    </tr>

    @foreach (var item in Model)
    {
        decimal subTotal = item.Cantidad * item.Producto.Price;
        total += subTotal;
        totalCantidad += item.Cantidad;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Name)
            </td>
            <td>
                @item.Producto.Price.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @subTotal.ToString("C")
            </td>
        </tr>
    }
    <tr>
        <td>

        </td>
        <td style="text-align: right">
            <b>Total</b>
        </td>
        <td>
            <b>@totalCantidad</b>
        </td>
        <td>
            <b>@total.ToString("C")</b>
        </td>
    </tr>

</table>


<br />
<br />
<center><small>Reporte generado @DateTime.Today.ToLongDateString()</small></center>

