@model Joselito_Technocell.Models.Requisitions
@{
    ViewBag.Title = "Requisiciones";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Categorias</h6>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @Html.ActionLink("Nueva categoria", "Create", null, new { @class = "btn btn-sm btn-neutral" })
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid mt--6">
    <div class="card">
        <div class="card-header">
            <center>
                <h3>
                    Crear requisicion
                </h3>
            </center>
        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SuplidorId, "Suplidor", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.DropDownList("SuplidorId", null, "-- Seleccione un suplidor --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SuplidorId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FechadePedido, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FechadeEntrega, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechadePedido, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>                
            }
        </div>
    </div>
</div>