@model Joselito_Technocell.ViewModels.VistaUsuario
@{
    ViewBag.Title = $"Roles pertenecientes a {Model.Nombre}";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">@ViewBag.Title</h6>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @Html.ActionLink("Volver a lista", "Index", new { }, new { @class = "btn btn-sm btn-neutral" })
                    @Html.ActionLink("Agregar Rol", "AgregarRoles", new { usuarioID = Model.UsuarioID }, new { @class = "btn btn-sm btn-info" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="card">
        <center>
            <h3 class="pt-5">Roles</h3>
        </center>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-flush" id="datatable-basic">
                    <thead>
                        <tr>
                            <td>
                                Roles
                            </td>
                            <td>
                                Acciones
                            </td>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {

                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => Model.Roles[i].Nombre)
                                </td>

                                <td>
                                    @Html.ActionLink("Delete", "Delete", new
                                    {
                                        usuarioID = Model.UsuarioID,
                                        rolID = Model.Roles
                    [i].RolID
                                    }, new { @class = "btn btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>